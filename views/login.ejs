<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <div class="col-10 offset-1" form-container>
        <form action="/login" method="POST" novalidate class="needs-validation">
            <h3 class="form-title">Login Page</h3>
            <!-- UserName -->
            <div class="form-group m-4">
                <label for="username">UserName</label>
                <input name="username" type="text" class="form-control" id="username" placeholder="UserName" required>
                <div class="invalid-feedback">
                    Please Enter the UserName
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
              </div>
              <!-- Password -->
              <div class="form-group m-4">
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control" id="password" placeholder="Password" required>
                <div class="invalid-feedback">
                    Please Enter the Strong Password
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
              </div>
              <button type="submit" class="btn btn-dark m-3">login</button>
        </form>
    </div>
</div>
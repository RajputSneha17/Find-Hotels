<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <div class="col-10 offset-1" form-container>
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <h3 class="form-title">SignUp Page</h3>
            <!-- UserName -->
            <div class="form-group m-4">
                <label for="username">UserName</label>
                <input name="username" type="text" class="form-control" id="username" placeholder="UserName" required>
                <div class="invalid-feedback">
                    Please Enter the UserName
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
              </div>
            <!-- Email Address -->
            <div class="form-group m-4">
                <label for="email">Email address</label>
                <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" required>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                <div class="invalid-feedback">
                    Please Enter the Correct Email
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
              </div>
              <!-- Password -->
              <div class="form-group m-4">
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control" id="password" placeholder="Password" required>
                <div class="invalid-feedback">
                    Please Enter the Strong Password
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
              </div>
              <button type="submit" class="btn btn-dark m-3">Submit</button>
        </form>
    </div>
</div>